<form role="form"
      method="{{ form.method }}"
      action="{{ form.action }}"
      id="{{ form.uid }}"
      name="{{ form.name }}"
      enctype="{{ form.enctype }}"
      class="{{ form.css }}"
      data-path="{{ form.path }}"
      data-get-widgets-ep="{{ form.get_widgets_ep }}"
      data-validation-ep="{{ form.validation_ep }}"
      data-steps="{{ form.steps }}"
      data-update-location-hash="{{ form.update_location_hash }}"
      data-assets="{{ ','.join(form.assets) }}"
      {% for k, v in form.data.items() %}
          data-{{ k }}="{{ v }}"
      {% endfor %}
>
    {#  Hidden area  #}
    <div class="form-area form-area-hidden hidden sr-only {{ form.area_hidden_css }}" data-form-area="hidden">
        <input type="hidden" name="__form_name" value="{{ form.name }}">
    </div>

    {#  Header area  #}
    <div class="form-area form-area-header {{ form.area_header_css }}" data-form-area="header">

        {% if form.title and not form.hide_title %}
            <div class="form-title">
                <h4 id="{{ form.uid }}-label" class="{{ form.title_css }}">{{ form.title | e }}</h4>
            </div>
        {% endif %}

        <div class="form-messages"></div>

        <div class="throbber" style="text-align: center;"><i class="fa fas fa-3x fa-spinner fa-pulse"></i></div>
    </div>

    {# Body area #}
    <div class="form-area form-area-body {{ form.area_body_css }}" data-form-area="body"></div>

    {# Footer area #}
    <div class="form-area form-area-footer {{ form.area_footer_css }}" data-form-area="footer"></div>
</form>
